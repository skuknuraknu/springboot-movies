server:
  port: 8081

spring:
  application:
    name: movie-service
  
  # Database configuration
  datasource:
    url: jdbc:postgresql://localhost:5432/movieapp
    username: your_db_username
    password: your_db_password
    driver-class-name: org.postgresql.Driver
    hikari:
      connection-timeout: 20000
      maximum-pool-size: 10
      minimum-idle: 5
      idle-timeout: 300000
      max-lifetime: 1200000
  
  # JPA/Hibernate configuration
  jpa:
    hibernate:
      ddl-auto: none  # Use 'none' for production, 'validate' for safety
    show-sql: false  # Set to true for debugging SQL queries
    properties:
      hibernate:
        show_sql: false
        format_sql: true
        jdbc:
          time_zone: UTC
        dialect: org.hibernate.dialect.PostgreSQLDialect
  
  # Flyway migration configuration
  flyway:
    enabled: true
    table: flyway_schema_history_movie
    locations: classpath:db/migrations
    baseline-on-migrate: true
    validate-on-migrate: true
    clean-disabled: true  # Disable clean in production
    baseline-version: 1
    encoding: UTF-8
    placeholder-replacement: false

# Logging configuration
logging:
  level:
    com.gugugaga.movie: INFO
    org.flywaydb: INFO
    org.springframework.boot.autoconfigure.flyway: INFO
    org.hibernate.SQL: WARN  # Set to DEBUG to see SQL queries
    org.hibernate.type.descriptor.sql.BasicBinder: WARN  # Set to TRACE to see parameter values