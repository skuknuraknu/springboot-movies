server:
  port: 8080

spring:
  application:
    name: gateway
  main:
    web-application-type: reactive
  cloud:
    gateway:
      routes:
        - id: movie-service
          uri: http://localhost:8081  # Movie service port
          predicates:
            - Path=/api/movies/**
        - id: auth-service
          uri: http://localhost:8082  # Auth service port
          predicates:
            - Path=/api/auth/**
      globalcors:
        corsConfigurations:
          '[/**]':
            allowedOrigins: "http://localhost:3000"  # Frontend URL
            allowedMethods:
              - GET
              - POST
              - PUT
              - DELETE
              - OPTIONS
            allowedHeaders: "*"
            allowCredentials: true

# Logging configuration (optional)
logging:
  level:
    org.springframework.cloud.gateway: INFO
    reactor.netty.http: INFO