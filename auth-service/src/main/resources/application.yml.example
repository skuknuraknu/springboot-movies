server:
  port: 8084

spring:
  application:
    name: auth-service
  
  # Database configuration
  datasource:
    url: jdbc:postgresql://localhost:5432/movieapp
    username: your_db_username
    password: your_db_password
    driver-class-name: org.postgresql.Driver
    hikari:
      connection-timeout: 20000
      maximum-pool-size: 10
      minimum-idle: 5
      idle-timeout: 300000
      max-lifetime: 1200000
  
  # JPA/Hibernate configuration
  jpa:
    hibernate:
      ddl-auto: none  # Use 'none' for production, 'validate' for safety
    show-sql: false  # Set to true for debugging SQL queries
    properties:
      hibernate:
        show_sql: false
        format_sql: true
        jdbc:
          time_zone: UTC
        dialect: org.hibernate.dialect.PostgreSQLDialect
  
  # Flyway migration configuration
  flyway:
    enabled: true
    table: flyway_schema_history_auth
    locations: classpath:db/migrations
    baseline-on-migrate: true
    validate-on-migrate: true
    clean-disabled: true  # Disable clean in production
    baseline-version: 1
    encoding: UTF-8
    placeholder-replacement: false

# JWT Configuration
jwt:
  secret: your-256-bit-secret-key-here  # Generate a secure 256-bit key
  expiration: 86400000  # 24 hours in milliseconds

# Security Configuration
security:
  cors:
    allowed-origins:
      - http://localhost:3000  # Frontend URL
    allowed-methods:
      - GET
      - POST
      - PUT
      - DELETE
      - OPTIONS
    allowed-headers: "*"
    allow-credentials: true

# Rate limiting (if using bucket4j)
bucket4j:
  enabled: true
  filters:
    - cache-name: rate-limit-buckets
      url: /api/auth/login
      rate-limits:
        - capacity: 5
          time: 1
          time-unit: minutes

# Logging configuration
logging:
  level:
    com.gugugaga.auth: INFO
    org.flywaydb: INFO
    org.springframework.boot.autoconfigure.flyway: INFO
    org.springframework.security: INFO
    org.hibernate.SQL: WARN  # Set to DEBUG to see SQL queries
    org.hibernate.type.descriptor.sql.BasicBinder: WARN  # Set to TRACE to see parameter values